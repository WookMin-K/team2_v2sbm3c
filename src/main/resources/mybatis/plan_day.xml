<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dev.mvc.plan_day.Plan_dayDAOInter">

  <!-- ResultMap -->
  <resultMap id="PlanDayDAOInter" type="dev.mvc.plan_day.Plan_dayVO">
    <id     property="plan_day_no" column="plan_day_no" />
    <result property="day_order"   column="day_order" />
    <result property="pdate"       column="pdate" />
    <result property="plan_no"     column="plan_no" />
  </resultMap>

  <!-- Create -->
  <insert id="create" parameterType="dev.mvc.plan_day.Plan_dayVO">
    INSERT INTO plan_day (
      plan_day_no, day_order, pdate, plan_no
    ) VALUES (
      plan_day_seq.NEXTVAL,
      #{day_order},
      #{pdate},
      #{plan_no}
    )
  </insert>

  <!-- Read -->
  <select id="read" parameterType="int" resultMap="PlanDayDAOInter">
    SELECT plan_day_no, day_order, pdate, plan_no
    FROM plan_day
    WHERE plan_day_no = #{plan_day_no}
  </select>
  
  <!-- Update -->
  <update id="update" parameterType="dev.mvc.plan_day.Plan_dayVO">
    UPDATE plan_day
    SET
      day_order = #{day_order},
      pdate     = #{pdate}
    WHERE plan_day_no = #{plan_day_no}
  </update>

  <!-- Delete -->
  <delete id="delete" parameterType="int">
    DELETE FROM plan_day WHERE plan_day_no = #{plan_day_no}
  </delete>


</mapper>
